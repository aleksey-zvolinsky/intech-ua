<div id="journal">
	<div id="filters">
		<form method="get">
			<div>
				<label for="dateFrom">Дата с</label>
				<input type="date" name="dateFrom" id="dateFrom">
			</div>
			<div>
				<label for="dateTo">Дата по</label>
				<input type="date" name="dateTo" id="dateTo">
			</div>
			<input type="submit" value="Обновить">
			<input type="button" value="Печать">
			
			
			<div id="counters">
				<label for="c[0]">Хлоргаз 1</label>
				<input type="checkbox" name="counter1" value="1" id="c[0]">
				
				<label for="c[1]">Хлоргаз 2</label>
				<input type="checkbox" name="counter2" value="1" id="c[1]">
				
				<label for="c[2]">Гипохлорид</label>
				<input type="checkbox" name="counter3" value="1" id="c[2]">
			</div> 
			
			<div id="states">
				<label for="s[0]">Расход</label>
				<input type="checkbox" name="state0" value="1" id="s[0]">
				
				<label for="s[1]">Питание</label>
				<input type="checkbox" name="state1" value="1" id="s[1]">
				
				<label for="s[2]">Авария</label>
				<input type="checkbox" name="state2" value="1" id="s[2]">
			</div>
		</form>
	</div>
	<table>
	<tr><th>Расходомер</th><th>Дата-время</th><th>Расход</th><th>Описание события</th></tr>
	
	#foreach( $r in $result )
	<tr>
		<td>$r.counterId</td>
		<td>$r.date</td>
		<td>$r.level</td>
		<td>???</td>
	</tr>
	#end
	
	</table>
</div>